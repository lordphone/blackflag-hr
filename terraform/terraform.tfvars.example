# AWS Configuration
aws_region = "us-west-2"

# Project Configuration
project_name = "hr-cloud-infra"
environment  = "dev"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-west-2a", "us-west-2b"]

# Database Configuration
db_instance_class     = "db.t3.micro"  # For production, use db.t3.small or larger
db_allocated_storage  = 20             # GB
db_name              = "hrdb"
db_username          = "dbadmin"

# ECS Configuration
ecs_task_cpu            = "256"   # 0.25 vCPU
ecs_task_memory         = "512"   # 512 MB
backend_container_port  = 8000
backend_desired_count   = 2       # Number of tasks to run

# Monitoring Configuration
alert_email = "your-email@example.com"  # Email for CloudWatch alarms

# Production Settings (set to true for production)
enable_deletion_protection = false  # Set to true for production
enable_multi_az           = false  # Set to true for production (higher cost)

# Note: Copy this file to terraform.tfvars and update the values
# Never commit terraform.tfvars to version control!



